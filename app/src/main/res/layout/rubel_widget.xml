<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/appwidget_text"
                android:fontFamily="@font/roboto_thin"
                android:singleLine="true"
                android:text="@string/appwidget_text"
                android:textColor="@color/colorSelectedTab"
                android:textSize="@dimen/widget_top_size" />

            <ImageButton
                android:id="@+id/sync_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@color/colorTransparent"
                android:contentDescription="@string/update_button"
                android:src="@drawable/ic_widget_update"
                app:srcCompat="@drawable/ic_widget_update" />

            <ProgressBar
                android:id="@+id/progressBarWidget"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/area_curs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/widget_cur_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wcur_one_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorCurrencyOne"
                    android:textSize="@dimen/widget_scale_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wcur_one_value"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />

                    <TextView
                        android:id="@+id/wcur_one_move"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontawesome"
                        android:paddingStart="4dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_cur_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wcur_two_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorCurrencyTwo"
                    android:textSize="@dimen/widget_scale_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wcur_two_value"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />

                    <TextView
                        android:id="@+id/wcur_two_move"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontawesome"
                        android:paddingStart="4dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_cur_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wcur_three_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorCurrencyThree"
                    android:textSize="@dimen/widget_scale_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wcur_three_value"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />

                    <TextView
                        android:id="@+id/wcur_three_move"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontawesome"
                        android:paddingStart="4dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_cur_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wcur_four_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorCurrencyFour"
                    android:textSize="@dimen/widget_scale_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wcur_four_value"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />

                    <TextView
                        android:id="@+id/wcur_four_move"
                        style="@style/TextViewMainCurrencyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/fontawesome"
                        android:paddingStart="4dp"
                        android:textAlignment="center"
                        android:textSize="@dimen/widget_scale_size" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>